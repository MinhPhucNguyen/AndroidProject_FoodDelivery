<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="8dp"
    android:background="@drawable/linear_layout_border2"
    android:orientation="horizontal"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/imageViewCartItem"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/fast_2"
        android:layout_marginLeft="8dp"
        />

    <!--Middle-->
    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNameItemCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="33dp"
            android:text="Name Food"
            android:textSize="18sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:background="@drawable/linear_layout_border">

            <TextView
                android:id="@+id/minusBtn"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_minus"
                android:paddingLeft="8dp" />

            <TextView
                android:id="@+id/quantityItemCart"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="1"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/plusBtn"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_plus"
                android:paddingRight="4dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/removeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="60dp"
            android:drawableStart="@drawable/ic_close" />

        <TextView
            android:id="@+id/textViewPriceItemCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="9dp"
            android:text="$25"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>


</LinearLayout>